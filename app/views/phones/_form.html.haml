= simple_form_for phone, :remote => true, :html => {:id => "phone_form", :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :number
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), phones_path, :class => 'btn cancel'
